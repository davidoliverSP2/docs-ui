<!DOCTYPE html>
<html lang="en">
  <head>
{{> head defaultPageTitle='Untitled'}}
  </head>
  <body class="article landing {{#with (or asciidoc.attributes.role page.role)}} {{{this}}}{{/with}}{{#with (or page.attributes.theme "developer")}} {{{this}}}{{/with}}">
{{> header}}


{{#if page.attributes.herotitle }}
  <section class="hero">
    <div class="row">
      <div class="columns medium-12">
        {{#with page.attributes.herotitle}}
          <h1>{{{this}}}</h1>
        {{/with}}

        {{#with page.attributes.herosubtitle}}
          <p>{{ this }}</p>
        {{/with}}
      </div>
    </div>
  </section>
{{/if}}

<main class="article">
  <div class="content">
    {{> article}}
    {{> toc}}
  </div>
</main>

{{> footer}}
  </body>
</html>
